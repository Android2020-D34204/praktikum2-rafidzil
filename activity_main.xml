<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#397AAF"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/angka1"
        android:layout_width="359dp"
        android:layout_height="51dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint=" Masukan bilangan pertama"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.177" />

    <EditText
        android:id="@+id/angka2"
        android:layout_width="364dp"
        android:layout_height="49dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint=" Masukan bilangan kedua"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/angka1"
        app:layout_constraintVertical_bias="0.223" />

    <EditText
        android:id="@+id/operator"
        android:layout_width="142dp"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint=" Operasi"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/angka2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/angka1"
        app:layout_constraintVertical_bias="0.409" />

    <TextView
        android:id="@+id/editHasil"
        android:layout_width="219dp"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        android:text="Hasil"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/angka2"
        app:layout_constraintVertical_bias="0.202" />

    <Button
        android:id="@+id/tombol"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:onClick="Ngitung"
        android:text="Hitung"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editHasil"
        app:layout_constraintVertical_bias="0.255" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="335dp"
        android:layout_height="62dp"
        android:text="Selamat Datang Di Kalkulator Rafi Dzil"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

</androidx.constraintlayout.widget.ConstraintLayout>